<h1>Say Hello!</h1>

<%= form_with model: @contact do |f| %>

    <%= f.label :name %><br />
    <%= f.text_field :name, required: true %>

    <br />
    
    <%= f.label :email %><br />
    <%= f.email_field :email, required: true %>

    <br />

    <%= f.label :message %><br />
    <%= f.text_area :message, as: :text %>

    <br />

    <%= f.submit "Send Message" %>

<% end %>
